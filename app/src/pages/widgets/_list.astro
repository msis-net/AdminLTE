<style>
    aside{
        font-size: 1.0em;
        padding-left: 1em;
    }
    aside a, li{
        text-decoration: none;
        color:#666;
    }
    
    aside ul.list li{
        margin-left: -1em;
    }
    
    aside ul.list ul li{
        margin-left: -2em;
    }
</style>