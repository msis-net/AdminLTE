import {convertPathToHtml} from "@/utils/index.js";
const {path} = Astro.props;
const htmlPath = convertPathToHtml(path);
---
<aside class="app-sidebar container-fluid float-sm-end h-100">
    <a href={htmlPath + "./listnav"} class="fw-bold">Index</a>
    <ul class="list">
        <!--li><a href="{% url 'htmldoc:man_env' '000' %}#001">本マニュアルの表現に関して</a></li-->
